{
	"type": "module",
	"name": "meibot",
	"version": "0.1.0",
	"description": "Bot for Meicord",
	"main": "index.js",
	"scripts": {
		"start": "node build/index.js",
		"start:env": "node --env-file=.env build/index.js",
		"dev": "tsx --env-file=.env index.ts",
		"build": "esbuild index.ts --bundle --packages=external --platform=node --target=node24 --outdir=build --format=esm",
		"test": "vitest"
	},
	"dependencies": {
		"better-sqlite3": "^12.4.1",
		"discord-api-types": "^0.38.26",
		"discord.js": "^14.22.1",
		"knex": "^3.1.0",
		"pino": "^9.13.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"esbuild": "^0.25.10",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	}
}
